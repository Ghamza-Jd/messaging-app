{
  "name": "messaging-backend",
  "version": "1.0.0",
  "main": "app.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node -T -r tsconfig-paths/register app.ts",
    "dev": "tsnd -r tsconfig-paths/register app.ts",
    "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create -n",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register ./__test__/**/*.test.ts --exit",
    "coverage": "nyc --report=text --reporter=text --branches=80 --functions=80 --lines=80 --statements=80 --check-coverage=true npm run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/axios": "^0.14.0",
    "@types/chai": "^4.2.15",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.10",
    "@types/express": "4.17.2",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.2.1",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validation": "^3.0.6",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.45",
    "winston": "^3.3.3"
  }
}
